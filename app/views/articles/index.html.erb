
<h1>Listing Articles</h1>
<%= link_to "New Article" , new_article_path %>


<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>

<%# Looks through the articles array it was passed. %>
    <% @articles.each do |article| %>
        <tr>
            <td>
                <%= article.title %>
            </td>

            <td>
                <%= article.text %>
            </td>

            <!--
            <td>
                <%= article.inspect %>
            </td>
            -->

            <td>
                <%= link_to 'Show', article_path(article) %>
            </td>
            
            <td>
                <%=  link_to "Edit", edit_article_path(article) %>
            </td>

        </tr>
    <% end %>
</table>